<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.QuickFileSearch</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>QuickFileSearch</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="" url=""></vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    Integration with fzf for quickly finding files. Create shortcuts to search in specific directories or extensions
    to speed up finding the file you want! Can be integrated with ideavim by using ide actions.
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.quickfilesearch.settings.ApplicationStartupSetup"/>
<!--        <applicationStartupActivity implementation="com.example.MyApplicationStartupActivity"/>-->
        <projectService
                serviceInterface="com.quickfilesearch.services.RecentFilesKeeper"
                serviceImplementation="com.quickfilesearch.services.RecentFilesKeeper"/>
<!--        <projectService-->
<!--                serviceInterface="com.quickfilesearch.services.FileChangeListener"-->
<!--                serviceImplementation="com.quickfilesearch.services.FileChangeListener"/>-->
        <applicationConfigurable
                parentId="tools"
                instance="com.quickfilesearch.settings.GlobalSettingsConfigurable"
                id="com.quickfilesearch.settings.GlobalSettingsConfigurable"
                displayName="Quick File Search Settings"/>
                displayName="QuickFileSearch Settings"/>
        <notificationGroup id="QuickFileSearchGroup"
                           displayType="BALLOON"
                           toolWindowId="Event Log"
                           isLogByDefault="true"/>
    </extensions>
    <actions>
    </actions>
</idea-plugin>